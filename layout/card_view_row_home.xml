<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/card_view_vertical_margin"
    android:paddingLeft="@dimen/card_view_horizontal_margin"
    android:paddingRight="@dimen/card_view_horizontal_margin"
    android:paddingTop="@dimen/card_view_vertical_margin">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@drawable/cardview_back_7">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imgGroupDP"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtGroupName"
                android:text="Group Name"
                android:textColor="@color/putih"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/imgGroupDP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtGroupDescription"
                android:text="Group Description"
                android:textColor="@color/putih"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/imgGroupDP"
                android:layout_below="@+id/txtGroupName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAdmin"
                android:text="0"
                android:textColor="@color/putih"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtGroupDescription"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>